<div class="form-container">
  <%= form_with model: product do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "form-label" %><br>
      <%= form.text_field :name, class: "form-input" %><br><br>
    </div>
    
    <div class="form-group">
      <%= form.label :description, class: "form-label" %><br>
      <%= form.rich_text_area :description, class: "form-input" %><br>
    </div>

    <div class="form-group">
      <%= form.label :featured_image, class: "form-label" %><br>
      <%= form.file_field :featured_image, accept: "image/*", class: "form-input" %><br><br>
    </div>

    <div class="form-group">
      <%= form.label :inventory_count, class: "form-label" %><br>
      <%= form.number_field :inventory_count, class: "form-input" %><br><br>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "form-submit" %>
      
    </div>
  <% end %>
</div>
